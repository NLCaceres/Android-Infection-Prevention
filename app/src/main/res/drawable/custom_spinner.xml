<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <layer-list>
      <item>
        <shape>
          <solid android:color="@color/colorLightDark"/>
          <stroke android:width="1dp" android:color="@color/colorPrimaryDark" />
          <corners android:radius="4dp" />
          <padding android:left="3dp" android:top="3dp" android:right="5dp" android:bottom="3dp" />
        </shape>
      </item>
      <item android:drawable="@drawable/ic_dropdown_arrow" android:gravity="right" />
    </layer-list>
  </item>
  <item>
    <layer-list>
      <item>
        <shape>
          <solid android:color="@color/colorLight"/>
          <stroke android:width="1dp" android:color="@color/colorPrimaryDark" />
          <corners android:radius="4dp" />
          <padding android:left="3dp" android:top="3dp" android:right="5dp" android:bottom="3dp" />
        </shape>
      </item>
      <item android:drawable="@drawable/ic_dropdown_arrow" android:gravity="right" />
    </layer-list>
  </item>
</selector>